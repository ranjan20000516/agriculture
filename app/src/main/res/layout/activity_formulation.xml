<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".FormulationActivity">
    <LinearLayout
        android:paddingTop="20dp"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
           android:paddingLeft="8dp"
            android:textSize="16sp"
            android:textStyle="bold"
            android:layout_gravity="center"
            android:drawableLeft="@drawable/ic_baseline_fiber_manual_record_24"
            android:text="Calculation of plant population of kinnow"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
        <ImageView
            android:layout_marginHorizontal="16dp"
            android:layout_marginTop="16dp"
            android:background="#fff"
            android:elevation="5dp"
            android:src="@drawable/formula1"
            android:layout_width="match_parent"
            android:layout_height="40dp"/>

        <LinearLayout
            android:layout_marginHorizontal="16dp"

            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView

                android:text="Area = "

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <EditText
                android:id="@+id/areaET"
                android:backgroundTint="@color/orange_500"
                android:layout_marginHorizontal="10dp"
                android:inputType="number"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"/>
            <TextView

                android:text="mtsq"

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

        </LinearLayout>
        <LinearLayout
            android:layout_marginHorizontal="16dp"

            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView

                android:text="Spacing = "

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <EditText
                android:id="@+id/spacingET"
                android:backgroundTint="@color/orange_500"
                android:layout_marginHorizontal="10dp"
                android:inputType="number"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"/>
            <TextView

                android:text="m*m"

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

        </LinearLayout>
        <LinearLayout
            android:layout_marginHorizontal="16dp"

            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView

                android:text="Plant Population = "

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <EditText

                android:id="@+id/areaAnsET"
                android:backgroundTint="@color/orange_500"
                android:layout_marginHorizontal="10dp"
                android:inputType="none"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"/>


        </LinearLayout>
        <com.google.android.material.button.MaterialButton
            android:elevation="5dp"
            android:id="@+id/calculatePlantBtn"
            android:layout_marginHorizontal="16dp"
            android:layout_marginBottom="10dp"
            android:text="Calculate Plant Population"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>



        <TextView
            android:paddingLeft="8dp"
            android:textSize="16sp"
            android:textStyle="bold"
            android:layout_gravity="center"
            android:drawableLeft="@drawable/ic_baseline_fiber_manual_record_24"
            android:text="Calculation of initial fruit set percentage"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
        <ImageView
            android:layout_margin="16dp"
            android:background="#fff"
            android:elevation="5dp"
            android:src="@drawable/formula2"
            android:layout_width="match_parent"
            android:layout_height="40dp"/>
        <LinearLayout
            android:layout_marginHorizontal="16dp"

            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView

                android:text="Initial Fruit set"

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <EditText
                android:id="@+id/initialFruitET"
                android:backgroundTint="@color/orange_500"
                android:layout_marginHorizontal="10dp"
                android:inputType="number"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"/>

        </LinearLayout>
        <LinearLayout
            android:layout_marginHorizontal="16dp"

            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView

                android:text="Total no. of Flowers"

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <EditText
                android:id="@+id/totalFlowersET"
                android:backgroundTint="@color/orange_500"
                android:layout_marginHorizontal="10dp"
                android:inputType="number"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"/>

        </LinearLayout>
        <LinearLayout
            android:layout_marginHorizontal="16dp"

            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView

                android:text="Initial Fruit set percentage "

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <EditText
                android:id="@+id/setCentAnsET"
                android:backgroundTint="@color/orange_500"
                android:layout_marginHorizontal="10dp"
                android:inputType="number"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"/>

        </LinearLayout>
        <com.google.android.material.button.MaterialButton
            android:elevation="5dp"
            android:id="@+id/calculateFruitBtn"
            android:layout_marginHorizontal="16dp"
            android:layout_marginBottom="10dp"
            android:text="Calculate initial fruit set percentage"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
        <TextView
            android:paddingLeft="8dp"
            android:textSize="16sp"
            android:textStyle="bold"
            android:layout_gravity="center"
            android:drawableLeft="@drawable/ic_baseline_fiber_manual_record_24"
            android:text="Calculation of yield per plant"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
        <ImageView
            android:layout_margin="16dp"
            android:background="#fff"
            android:elevation="5dp"
            android:src="@drawable/formula3"
            android:layout_width="match_parent"
            android:layout_height="40dp"/>
        <LinearLayout
            android:layout_marginHorizontal="16dp"

            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView

                android:text="Total number of plants"

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <EditText
                android:id="@+id/totalPlantsET"
                android:backgroundTint="@color/orange_500"
                android:layout_marginHorizontal="10dp"
                android:inputType="number"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"/>

        </LinearLayout>
        <LinearLayout
            android:layout_marginHorizontal="16dp"

            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView

                android:text="Average Fruit Weight"

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <EditText
                android:id="@+id/avgWeightET"
                android:backgroundTint="@color/orange_500"
                android:layout_marginHorizontal="10dp"
                android:inputType="numberDecimal"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"/>
            <TextView

                android:text="in kg"

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

        </LinearLayout>
        <LinearLayout
            android:layout_marginHorizontal="16dp"

            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView

                android:text="Yield per plant"

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <EditText
                android:id="@+id/yieldAnsET"
                android:backgroundTint="@color/orange_500"
                android:layout_marginHorizontal="10dp"
                android:inputType="number"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"/>
            <TextView

                android:text="kg/plant"

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>


        </LinearLayout>
        <com.google.android.material.button.MaterialButton
            android:elevation="5dp"
            android:id="@+id/calculateYieldBtn"
            android:layout_marginHorizontal="16dp"
            android:layout_marginBottom="10dp"
            android:text="Calculate yield per plant"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
    </LinearLayout>

</ScrollView>